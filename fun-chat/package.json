{
  "author": "letanatol",
  "name": "fun-chat",
  "version": "1.0.0",
  "description": "FunChat is a lively and interactive messaging application designed to bring through engaging conversations",
  "browserslist": [
    "last 2 versions",
    "> 5%"
  ],
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@types/sass": "^1.45.0",
    "autoprefixer": "^10.4.17",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.9.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "gh-pages": "^6.1.1",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "mini-css-extract-plugin": "^2.7.7",
    "postcss": "^8.4.33",
    "postcss-loader": "^8.0.0",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "sass-loader": "^14.0.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "ts-loader": "^9.4.3",
    "tsconfig-paths-webpack-plugin": "^4.0.1",
    "typescript": "5.0.4",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0"
  },
  "license": "MIT",
  "private": false,
  "scripts": {
    "dev": "webpack serve --config configuration/webpack.dev.config.js --mode=development",
    "build": "webpack --config configuration/webpack.dev.config.js --mode=development",
    "production": "webpack --config configuration/webpack.prod.config.js --mode=production",
    "lint:sass": "stylelint \"**/*.scss\"",
    "lint": "eslint --ext .ts \"src/**/*.ts\" --fix",
    "deploy": "npm run production && npx gh-pages -d dist -e async-race -m \"feat: update deploy\"",
    "stats": "webpack --config configuration/webpack.prod.config.js --mode=production --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json",
    "format": "prettier --write \"./src/**/*.ts\"",
    "ci:format": "prettier --check \"./src/**/*.ts\""
  },
  "target": "web"
}
